[user]
	name = johngodlee
	email = johngodlee@gmail.com
[credential]
	helper = osxkeychain
[core]
	editor = vim
	pager = less 
	excludesfile = /Users/johngodlee/.gitignore_global
[diff]
	external = git_diff_wrapper 
[pager]
	diff = 
[commit]
	verbose = true
	template = ~/.gitmessage
[merge]
	tool = vimdiff
[alias]
  network = log --graph --decorate --pretty=oneline --abbrev-commit --all
[http]
	postBuffer = 524288000
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
